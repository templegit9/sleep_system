# Sleep API Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://sleep_user:sleep_pass@localhost:5432/sleep_db

# Audio Storage
AUDIO_STORAGE_PATH=/mnt/sleep-audio

# Security - CHANGE THESE IN PRODUCTION!
API_KEY=your-secure-api-key-here
PI_API_KEY=your-pi-upload-key-here
TRUSTED_IPS=127.0.0.1,::1,10.0.0.0/8
CORS_ORIGIN=http://localhost:3000

# Home Assistant Integration
HOME_ASSISTANT_URL=http://home-assistant.local:8123
HOME_ASSISTANT_TOKEN=your_long_lived_access_token

# Qingping Entity IDs (from Home Assistant)
QINGPING_CO2_ENTITY=sensor.qingping_air_monitor_co2
QINGPING_TEMP_ENTITY=sensor.qingping_air_monitor_temperature
QINGPING_HUMIDITY_ENTITY=sensor.qingping_air_monitor_humidity
